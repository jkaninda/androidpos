<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.jkantech.ozeckpos.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/app_name"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/app_name"
        android:layout_marginTop="50dp"
        >





        <androidx.cardview.widget.CardView
            android:id="@+id/card_print"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/news_card3"
            android:foreground="?android:selectableItemBackground"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"

                    >
                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_baseline_local_printshop_24_black"
                            android:layout_margin="15dp"
                            app:tint="@color/white" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imprimer facture"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/itim"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/card_about"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/card4"
            android:foreground="?android:selectableItemBackground"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"

                    >
                    <!--
                        android:background="@drawable/round_shape"
                        -->
                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp">




                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_baseline_info_24_black"
                            android:layout_margin="15dp"
                            app:tint="@color/white" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/project_inprogress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_about"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/itim"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>